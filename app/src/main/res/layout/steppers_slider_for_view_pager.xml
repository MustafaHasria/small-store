<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:flow_horizontalAlign="center">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/steppers_slider_for_view_pager_animation"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_marginTop="16sp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/users_animation_login"
        app:lottie_url="REPLACE_JSON_URL"
        tools:ignore="MissingConstraints"></com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/steppers_slider_for_view_pager_text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/product_sans_bold"
        android:text="@string/heading_one"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/steppers_slider_for_view_pager_text_view_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="@string/desc_one"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp" />


</LinearLayout>