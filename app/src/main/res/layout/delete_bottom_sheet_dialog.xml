<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delete_bottom_sheet_dialog_linear_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:gravity="center"
    android:orientation="vertical">


    <View
        android:id="@+id/delete_bottom_sheet_dialog_view_line"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/delete_indictor_shape_for_delete_bottom_sheet_dialog" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/delete_bottom_sheet_dialog_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/product_sans_bold"
        android:gravity="center"
        android:text="Are you sure want to delete\n this Category?"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/delete_bottom_sheet_dialog_text_view_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_button_bk"
        android:fontFamily="@font/product_sans_bold"
        android:gravity="center"
        android:padding="7dp"
        android:text="No"
        android:textColor="@color/smoke_white"
        android:textSize="18sp"></TextView>


    <TextView
        android:id="@+id/delete_bottom_sheet_dialog_text_view_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_button_bk"
        android:fontFamily="@font/product_sans_bold"
        android:gravity="center"
        android:padding="7dp"
        android:text="Yes"
        android:textColor="@color/smoke_white"
        android:textSize="18sp"></TextView>

</LinearLayout>